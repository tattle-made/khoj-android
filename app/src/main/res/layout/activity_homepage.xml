<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomepageActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarHomepage"
        style="@style/toolbarTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/secondaryColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                android:gravity="center_vertical"
                android:text="@string/app_name"
                android:textColor="@color/secondaryTextColor"
                android:textSize="@dimen/toolbar_text" />

            <LinearLayout
                android:id="@+id/llToolbarWelcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="0dp"
                android:paddingEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_namaste_small"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:text="@string/hello"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="@dimen/toolbar_big_text"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/fact_check_rumors"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="@dimen/toolbar_text" />

                <android.widget.Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/rounded_corner_primary_color"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="@string/try_it"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:id="@+id/fragment_home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/navHome"
        app:layout_constraintTop_toBottomOf="@+id/toolbarHomepage" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemHorizontalTranslationEnabled="true"
        app:itemIconTint="@color/bottom_navigation_text"
        app:itemTextColor="@color/bottom_navigation_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/home_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>